{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}{% block body %}<h1>List des quizs</h1><table class="table">
<thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Image</th>

    </tr>
</thead>
<tbody>
    {% for quiz in quizs %}
        <tr>
            <td>{{ quiz.id }}</td>
            <td>{{ quiz.name }}</td>
            <td>{{ quiz.image }}</td>
            <td>
                <a href="{{ path('adminQuiz_show', {'id': quiz.id}) }}">show</a>
                <a href="{{ path('adminQuiz_edit', {'id': quiz.id}) }}">edit</a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="6">Pas de resultas !</td>
        </tr>
    {% endfor %}

</tbody></table><a href="{{ path('quiz_new') }}">Create new</a>{% endblock %}
