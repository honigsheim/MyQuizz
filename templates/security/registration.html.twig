{% extends 'base.html.twig' %}
{% block body %}
{% if editMode %}

    <h1>Modifier profile</h1>
{% else %}
    <h1>Inscription</h1>

{% endif %}

{{ form_start(form) }}

<div class=" form-group">
    {{ form_row(form.email,{'attr':{'placeholder':"Entrer votre email !",'class':'form-control'}}) }}
</div>

<div class=" form-group">
    {{ form_row(form.username,{'attr':{'placeholder':"Entrer votre username !",'class':'form-control'}}) }}
</div>

<div class=" form-group">
    {{ form_row(form.password,{'attr':{'placeholder':"Entrer votre mot de passe !",'class':'form-control',}}) }}

</div>
<div class=" form-group">
    {{ form_row(form.confirm_password,{'label':'Confirmation password','attr':{'placeholder':"Confirmation mot de passe !",'class':'form-control'}}) }}

</div>
{% if editMode %}
    <button class="btn btn-success" type="submit">Modifier</button>
{% else %}
    <button class="btn btn-success" type="submit">Inscription</button>
</h1>{% endif %}{{ form_end(form) }}{% endblock %}
